<div class="student--title">
  <h1>受講生詳細</h1>
</div>
<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row">
    <div class="d-flex align-items-center border student--show col-3">
      ID:
    </div>
    <div class="d-flex align-items-center border-right border-top border-bottom student--show col-9">
      <%= @student.id %>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border student--show col-3">
      名前:
    </div>
    <div class="d-flex align-items-center border-right border-top border-bottom student--show col-9">
      <%= @student.name %>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border student--show col-3">
      Eメール:
    </div>
    <div class ="d-flex align-items-center border-right border-top border-bottom student--show col-9">
      <%= @student.email %>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border student--show col-3">
      電話番号:
    </div>
    <div class="d-flex align-items-center border-right border-top border-bottom student--show col-9">
      <%= @student.phone_number %>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border student--show col-3">
      コース:
    </div>
    <div class="d-flex align-items-center border-right border-top border-bottom student--show col-9">
      <% if @student.course_type == "therapist_training" %>
        セラピスト養成コース
      <% elsif @student.course_type == "self_care" %>
        セルフケアコース
      <% end %>
    </div>
  </div>
</div>
<br>
<%= link_to "戻る", students_path , class: "btn btn-primary btn--resize" %>
