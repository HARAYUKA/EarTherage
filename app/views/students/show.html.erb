<div class="student_sidebar">
  <%= render 'sidebar' %>
</div>

<div class="container col-10 col-md-10 col-lg-10">
  <div class="students-info">
    <h4>名前</h4><br>
      <p><%= @student.name %> 様</p>
    <h4>メールアドレス</h4><br>
      <p><%= @student.email %></p>
    <h4>電話番号</h4><br>
      <p><%= @student.phone_number %></p>
    <h4>受講コース</h4><br>
      <p><%= course_status(@student) %><br>
  </div>
  <div class="back-btn">
    <% if @student.course_type == "therapist_training" %>
      <%= link_to "戻る", therapist_training_course_path(current_student), class: "btn btn-outline-secondary" %>
    <% elsif @student.course_type == "self_care" %>  
      <%= link_to "戻る", self_care_course_path(current_student), class: "btn btn-outline-secondary" %>
    <% end %>
  </div>   
</div>  