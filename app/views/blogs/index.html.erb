<h1>スタッフブログ一覧</h1>
<div>
  <%= link_to "新規作成", new_staff_blog_path(@staff), class: "btn btn-info" %>
</div>
<% @blogs.each do |blog| %>
  <div>
    <!-- blogインスタンスの画像ファイルのURLを取得し表示 -->
    <p><%= link_to (image_tag blog.image.thumb.to_s if blog.image?), staff_blog_url(@staff, blog) %></p>
  </div>
  <div>
    <%= blog.title %>
  </div>
  <div>
    <%= blog.datetime %>
  </div>
  <div>
    <%= @staff.name %>
  </div>
<% end %>
