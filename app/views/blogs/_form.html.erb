<%= form_with model: [@staff,@blog], local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <%= f.hidden_field :staff_id, :value => @staff.id %>

  <%= f.label :title, class: "label-#{yield(:class_text)} btn-resize" %>
  <%= f.text_field :title, class: "form-control btn-resize" %>

  <!--<%= f.label :datetime, class: "label-#{yield(:class_text)} btn-resize" %>
  <%= f.datetime_field :datetime, class: "form-control btn-resize" %>-->

  <%= f.label :content, class: "label-#{yield(:class_text)} btn-resize" %>
  <%= f.text_area :content, 'data-provider': :summernote , class: "form-control btn-resize" %>

  <%= f.label "サムネイル画像を選択", class: "label-#{yield(:class_text)} btn-resize" %><br>
    <%= image_tag @blog.image.url(:thumb), id: :img_prev if @blog.image? %>
  <%= f.file_field :image, id: "blog_image", class: "form-control btn-resize" %>

  <%= f.label :share_with, class: "label-#{yield(:class_text)} btn-resize" %>
  <%= f.select :share_with, [['スタッフ', 'staff'],['セラピスト養成コース','therapist_training'],['セルフケアコース','self_care'],['一般','general'],['一時保存', 'temporary']], class: "form-control btn-resize" %>

  <%= f.submit yield(:button_text), class: "btn btn-outline-primary btn-block btn-#{yield(:class_text)} btn-resize" %>
<% end %>
