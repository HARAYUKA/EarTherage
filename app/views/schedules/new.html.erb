<!-- 画像ファルは5MBまで、というメッセージ（ただの警告） -->
<script type="text/javascript">
  $('#schedule_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('ファイルサイズは5MBまでです。小さいサイズのファイルを選択してください。');
    }
  });
</script>