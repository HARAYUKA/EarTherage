<h1>開講スケジュール一覧</h1>

<!--開講スケジュール一覧テーブル-->
<div class="col-md-10 offset-md-1">
  <div class="btn-schedule-new">
    <%= link_to "新規追加", new_schedule_path(@schedule), class: "btn btn-info" %>
  </div>
  <div class="contents-wrap">
    <% @schedules.each do |s| %>
      <div class="contents-box">
        <div><%= l(s.created_at, format: :long) %></div>
        <div class="image"><%= link_to (image_tag s.image.thumb.to_s if s.image?), s %></div>
        <label><%= link_to (s.title), s %></label>
        <label>開催エリア：<%= s.area %></label>
        <% if s.date != nil %>
          <label>開催日：<%= l(s.date, format: :default) %></label>
        <% else %>
          <div></div>
        <% end %>
        <label>セラピスト名：<%= s.teacher %></label><br>
        <%= link_to "編集", edit_schedule_path(s), class: "btn btn-primary" %>
        <%= link_to "削除", schedule_path(s), method: :delete,
              data: {confirm: "削除してよろしいですか？" },
              class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
  <div class="center">
    <%= link_to "<　戻る", '#', class: "btn btn-outline-secondary" %>
  </div>
</div>